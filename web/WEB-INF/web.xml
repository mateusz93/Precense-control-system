<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <context-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
        <description>default input encoding</description>
    </context-param>
    <filter>
    <filter-name>UTF8Filter</filter-name>
    <filter-class>filter.UTF8Filter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UTF8Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>unsubscribeSubject</servlet-name>
        <servlet-class>servlets.UnsubscribeSubjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>unsubscribeSubject</servlet-name>
        <url-pattern>/unsubscribeSubjectServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>courses</servlet-name>
        <servlet-class>servlets.CoursesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>courses</servlet-name>
        <url-pattern>/coursesServlet</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>courseInfo</servlet-name>
        <servlet-class>servlets.CourseInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>courseInfo</servlet-name>
        <url-pattern>/courseInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profileServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>saves</servlet-name>
        <servlet-class>servlets.SavesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saves</servlet-name>
        <url-pattern>/savesServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>Database for Web application</description>
        <res-ref-name>jdbc/WebApplication</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
